[ -z "$SRC" ] && err "Missing Required 'SRC' Variable for git"

build() {
  autoreconf -i -v -f
  [ -f autogen.sh ] && \
    sh autogen.sh
  make configure
  [ -f ./configure ] && \
    ./configure --prefix "${PREFIX}" "${CONFIGURE_FLAGS}"
  make
  make install
}

clean() {
  :
}

get() {
  git clone --recursive -b "${BRANCH:-master}" "${SRC}" .
}
